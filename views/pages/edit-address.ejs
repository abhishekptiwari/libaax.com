<%- include('../partials/header.ejs') %>      
 <!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
  <div class="container">
      <div class="row">
          <div class="col-lg-12">
              <div class="breadcrumb__text">
                  <h4>Address</h4>
                  <div class="breadcrumb__links">
                      <a href="/">Home</a>
                      <span>Sign-In</span>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>
<!-- Breadcrumb Section End -->

    <!--=================Account Section================= -->
    <section class="account-section padding-top padding-bottom bg_img bg_right_bottom"
        data-background="./assets/images/account/account-bg.png">
        <div class="container">
            <div class="account-wrapper">
                <div class="account-area">
                    <h3 class="account-title">Select a delivery address</h3>
                    
                    <% if(doesAddressExist) { %>
                        <form class="sign-in-form" action="/cart" method="get">
                    <p id="add1-area" style="display: none;"><%= doesAddressExist.address.details[0].area%></p>
                    <p id="add1-landMark" style="display: none;"><%= doesAddressExist.address.details[0].landmark%></p>
                    <p id="add1-flat" style="display: none;"><%= doesAddressExist.address.details[0].flat%></p>
                    <p id="add1-city" style="display: none;"><%= doesAddressExist.address.details[0].city%></p>
                    <p id="add1-state" style="display: none;"><%= doesAddressExist.address.details[0].state%></p>
                    <p id="add1-pincode" style="display: none;"><%= doesAddressExist.address.details[0].pin_code%></p>
                    <p id="add1-phone" style="display: none;"><%= doesAddressExist.address.details[0].phone_number%></p>

                    <h4 class="account-title">Previous Address</h4>
                    <div class="form-group">
                      <textarea 
                      disabled='true'
                      id="address-text"
                      type='text'
                      name="prev_address"
                      ></textarea>
                    </div>
                    <div class="form-group">
                        <input name="_csrf" type="hidden" value="<%= csrfToken %>" />
                        <input type="submit" value="Continue With Previous Address">
                    </div>
                </form>

                    <% } %>
                    <form class="sign-in-form" action="/post-Add-Address" method="POST">
                      <% if(doesAddressExist) { %>
                        <h4 class="account-title">Add New Address</h4>
                      <% } %>
                        <div class="form-group">
                            <input 
                             type="number"
                             placeholder="Phone Number"
							 name="phone"
                             value=""
                              >
                        </div>
                        <div class="form-group">
                            <input type="number"
                             placeholder="PIN Code"
                             id="my-input-01"
							 name="pin"
                             value=""
                            >
                            </div>
                            <!-- ************************* -->
                            <div class="form-group">
                                <input type="text"
                                    placeholder="Area, Colony, Street, Sector, Village"
                                    id="my-input-01"
                                    name="area"
                                    value=""
                                >
                            </div>
                            <div class="form-group">
                                <input type="text"
                                    placeholder="Flat, House no., Building, Company, Apartment"
                                    id="my-input-01"
                                    name="flat"
                                    value=""
                                >
                        </div>
                        <div class="form-group">
                            <input type="text"
                                placeholder="LandMark"
                                id="my-input-01"
                                name="landmark"
                                value=""
                            >
                        </div>
                        <div class="form-group">
                            <input type="text"
                            placeholder="Town/City"
                            id="my-input-01"
                            name="city"
                            value="">
                            </div>
                            <div class="form-group">
                                <input type="text"
                                    placeholder="State / Province / Region"
                                    id="my-input-01"
                                    name="state"
                                    value=""
                                >
                                </div>
                            <!-- **************************8 -->
                        <div class="form-group">
                            <input name="_csrf" type="hidden" value="<%= csrfToken %>" />
                            <input type="submit" value="Continue">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
  
    <!-- Footer Section Begin -->
