  <script>
      let area = document.getElementById('add1-area').innerText;
      let landmark = document.getElementById('add1-landMark').innerText;
      let flat = document.getElementById('add1-flat').innerText;
      let pincode = document.getElementById('add1-pincode').innerText;
      let city = document.getElementById('add1-city').innerText;
      let state = document.getElementById('add1-state').innerText;
      let phone = document.getElementById('add1-phone').innerText;



      document.getElementById('address-text').value = `
      Area: ${area}\nLandmark: ${landmark}\nFlat No: ${flat}\nPincode No: ${pincode}\nCity: ${city}\nState: ${state}\nPhone: ${phone}
      `.trim();
  </script>
